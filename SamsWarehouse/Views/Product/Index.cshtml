@model List<SamsWarehouse.Models.Product>
@{
    ViewData["Title"] = "Product Page";
}


<div class="text-center">
	<h1>Products</h1>
</div>

<div class="container px-4 px-lg-5 mt-5">
    <div class="row gx-4 gx-lg-5 row-cols-2 row-cols-md-3 row-cols-xl-4 row-cols-xxl-5 justify-content-center">
    @foreach (var product in Model)
	{


            <div class="col mb-5">
                <div class="card h-100 shadow">
                    <!-- Product image -->
                    <a asp-area="" asp-controller="Product" asp-action="Details" asp-route-id="@product.Id" >
                        <img class="card-img-top bg-primary p-2" src="@Url.Content("~/images/thumbnail/" + product.Id +"/"+ product.Id +"_1.webp")">
                    </a>
                    <!-- Product details -->
                    <div class="card-body p-2 pt-2 bg-body-secondary">
                        <div class="text-center">
                            <!-- Product name -->
                            <a asp-area="" asp-controller="Product" asp-action="Details" asp-route-id="@product.Id" class="text-decoration-none form-text">
                                <h5 class="fw-bolder">@product.Title</h5>
                            </a>
                            <!-- Product price -->
                            @product.Price.ToString("c2")
                        </div>
                    </div>
                    <!-- Product actions -->
                    @if (Context.Session.GetInt32("ID") != null)
                    {
                        <div class="card-footer p-2 pt-2 border-top-0">
                            <div class="text-center">
                                <a class="btn btn-primary mt-auto" data-add-to-cart-id="@product.Id">Add To Cart</a>
                            </div>
                        </div>
                    }
                    
                </div>
            </div>

            
        
    }
    </div>
</div>
